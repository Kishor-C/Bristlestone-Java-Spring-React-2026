<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">

	<bean id = "b1" class = "com.bristelcone.GreetImpV3"></bean>
	
	<bean id = "b2" class = "com.bristelcone.DatabaseProperties">
		<property name="username" value="dbUser"></property>
		<property name="password" value="dbPassword"></property>
		<property name="url" value="jdbc:mysql://ip:port"></property>
	</bean>
	
	<bean id = "b3" class = "com.bristelcone.DatabaseProperties">
		<constructor-arg name="username" value="testUser"></constructor-arg>
		<constructor-arg name="password" value="testPassword"></constructor-arg>
		<constructor-arg name="url" value="testUrl"></constructor-arg>
	</bean>
</beans>